pipeline {
	agent any
	parameters {
		string(name: "revision", defaultValue: "master", description: "branche ou TAG")
	}
	environment {
		gitLabUrl = "http://192.168.25.68/eSirius/"
		remoteConnexion = "esii@192.168.25.94"
		remoteDepotConst = "depot"
		remoteDirectoryConst = "ESII-APPLICATION/app"
	}
	tools {
		maven "Maven 3.0.4"
	}
	stages {
		stage ("Initialize") {
			steps {
				cleanWs()
				wrap([$class: 'AnsiColorBuildWrapper']) {
					echo "\u001B[34m revision : ${params.revision} \u001B[m"
				}
			}
		}
		stage ("build dashboard") {
			environment {
				gitRoot = "dashboard"
				jdkCompilation = "JDK 1.7.0_25"
				projectRoot = "dashboard"
			}
			steps {
				runBuild(env.gitRoot, env.projectRoot, env.jdkCompilation)
			}
		}
		stage ("build es2i") {
			environment {
				gitRoot = "es2i"
				jdkCompilation = "JDK 1.6.0_20"
				projectRoot = "es2i"
			}
			steps {
				runBuild(env.gitRoot, env.projectRoot, env.jdkCompilation)
			}
		}
		stage ("build eCustomer") {
			environment {
				gitRoot = "eCustomer"
				jdkCompilation = "JDK 1.6.0_20"
				projectRoot = "eCustomer"
			}
			steps {
				runBuild(env.gitRoot, env.projectRoot, env.jdkCompilation)
			}
		}
		stage ("build smsSender") {
			environment {
				gitRoot = "smsSender"
				jdkCompilation = "JDK 1.6.0_20"
				projectRoot = "smsSender"
			}
			steps {
				runBuild(env.gitRoot, env.projectRoot, env.jdkCompilation)
			}
		}
		stage ("build procyon") {
			environment {
				gitRoot = "eStat"
				jdkCompilation = "JDK 1.6.0_20"
				projectRoot = "procyon"
			}
			steps {
				runBuild(env.gitRoot, env.projectRoot, env.jdkCompilation)
			}
		}
		stage ("build eSecurity") {
			environment {
				gitRoot = "eSecurity"
				jdkCompilation = "JDK 1.6.0_20"
				projectRoot = "esecurity"
			}
			steps {
				runBuild(env.gitRoot, env.projectRoot, env.jdkCompilation)
			}
		}
		stage ("build eSirius-shared") {
			environment {
				gitRoot = "eSirius"
				jdkCompilation = "JDK 1.6.0_20"
				projectRoot = "eSirius-shared"
			}
			steps {
				runBuild(env.gitRoot, env.projectRoot, env.jdkCompilation)
			}
		}
		stage ("build es2i-rsi-connector") {
			environment {
				gitRoot = "es2i-rsi-connector"
				jdkCompilation = "JDK 1.6.0_20"
				projectRoot = "es2i-rsi-connector"
			}
