		gitLabUrl = "http://192.168.25.68/eSirius/"
		remoteConnexion = "esii@192.168.25.94"
	}
	stages {
		stage ("Initialize") {
			steps {
				wrap([$class: 'AnsiColorBuildWrapper']) {
					echo "\u001B[34m revision : ${params.revision} \u001B[m"
				}
				cleanWs()
				sh "ssh ${env.remoteConnexion} rm -rf ${env.depotFolder}/${params.revision}"
			}
		}
		stage ("build groupe 1") {
			parallel {
				stage ("build es2i") {
					environment {
						gitRoot = "es2i"
						jdkCompilation = "JDK 1.6.0_20"
