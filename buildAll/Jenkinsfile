					environment {
						gitRoot = "ePlanning"
						jdkCompilation = "JDK 1.6.0_20"
						mvnVersion = "Maven 3.2.1"
						projectRoot = "ePlanning"
						sourceAppDirectory = "ePlanning-app/target"
						sourceConfDirectory = "ePlanningConf/target/ePlanningConf"
