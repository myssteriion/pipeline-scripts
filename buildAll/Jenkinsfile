		}
		stage ("build groupe 5") {
			parallel {
				stage ("build eSirius") {
					environment {
						gitRoot = "eSirius"
						jdkCompilation = "JDK 1.6.0_20"
						mvnVersion = "Maven 3.2.1"
						projectRoot = "eSirius"
						sourceAppDirectory = "eSirius-app/target"
